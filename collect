#!/bin/bash

# backup gitconfig
cp -f /home/liwei/.gitconfig /home/liwei/dotfiles/gitconfig
echo 'backing up .gitconfig ...'


# backup vimperator
cp -f /home/liwei/.vimperatorrc /home/liwei/dotfiles/vimperatorrc
rm -rf vimperator
mkdir vimperator
mkdir vimperator/plugin
mkdir vimperator/colors
cp -rf /home/liwei/.vimperator/plugin vimperator/plugin
cp -rf /home/liwei/.vimperator/colors vimperator/colors
echo 'backing up .vimperator ...'


# backup awesome
rm -rf awesome
cp -rf /home/liwei/.config/awesome awesome
echo 'backing up .config/awesome ...'
