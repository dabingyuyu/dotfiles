#!/bin/bash

# backup gitconfig
cp -f /home/liwei/.gitconfig /home/liwei/dotfiles/gitconfig
echo 'backing up .gitconfig ...'


# backup vimperator
cp -f /home/liwei/.vimperatorrc /home/liwei/dotfiles/vimperatorrc
echo 'backing up .vimperatorrc ...'
rm -rf vimperator
mkdir vimperator
mkdir vimperator/plugin
mkdir vimperator/colors
cp -rf /home/liwei/.vimperator/plugin vimperator/
cp -rf /home/liwei/.vimperator/colors vimperator/
echo 'backing up .vimperator ...'


# backup muttatorrc
cp -f /home/liwei/.muttatorrc /home/liwei/dotfiles/muttatorrc
echo 'backing up .muttatorrc ...'


# backup awesome
rm -rf _config/awesome
cp -rf /home/liwei/.config/awesome _config/
echo 'backing up .config/awesome ...'
