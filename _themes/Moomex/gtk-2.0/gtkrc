style "moomex-clearlooks"
{

  engine "clearlooks" {
    radius = 2.5
    menubarstyle      = 2 # 0 = flat, 1 = sunken, 2 = flat gradient
    toolbarstyle      = 0 # 0 = flat, 1 = enable effects
    animation         = FALSE
    #scrollbar_color   = "#D5C8B5"
    #colorize_scrollbar = TRUE
    style  = GLOSSY
  }
}

