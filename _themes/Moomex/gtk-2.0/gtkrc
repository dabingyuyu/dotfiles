			stretch		= TRUE
    		}

		image
		{
			function	= BOX
			state		= ACTIVE
			file		= "Menu/menubar.png"
			border		= { 0, 0, 0, 0}
			stretch		= TRUE
    		}

		image
		{
			function	= BOX
			state		= INSENSITIVE
			file		= "Menu/menubar.png"
			border		= { 0, 0, 0, 0 }
			stretch		= TRUE
    		}

		image
		{
			function	= BOX
			recolorable	= TRUE
			state		= PRELIGHT
			file		= "Menu/menubar-item.png"
			border		= { 1, 1, 1, 1 }
			stretch		= TRUE
		}
 	}
