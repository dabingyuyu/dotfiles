style "moomex-progressbar"
{
  xthickness = 0
  ythickness = 0
  bg[NORMAL]   = @tooltip_bg_color
  bg[PRELIGHT] = @text_color
  fg[PRELIGHT] = @text_color
  fg[NORMAL]   = @fg_color

	engine "pixmap"
	{
		image
		{

			function	= BOX
			recolorable	= TRUE
			detail		= "trough"
			file		= "Progressbar/trough-progressbar-horiz.png"
			border		= { 4 , 4 , 2 , 2}
			stretch		= TRUE
			orientation	= HORIZONTAL
		}

		image
		{

			function	= BOX
			recolorable	= TRUE
			detail		= "bar"
			file		= "Progressbar/progressbar-horiz.png"
			border		= { 2 , 2 , 2 , 2}
			stretch		= TRUE
			orientation	= HORIZONTAL
		}

		image
		{

			function	= BOX
			recolorable	= TRUE
			detail		= "trough"
			file		= "Progressbar/trough-progressbar-vert.png"
			border		= {2 , 2 ,4 , 4}
			stretch		= TRUE
			orientation	= VERTICAL
		}

		image
		{

			function	= BOX
			recolorable	= TRUE
			detail		= "bar"
			file		= "Progressbar/progressbar-vert.png"
			border		= { 2 , 2 , 2 ,2}
			stretch		= TRUE
			orientation	= VERTICAL
		}
	}
}

