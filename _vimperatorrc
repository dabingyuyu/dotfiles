" 配色主题
colorscheme vimPgray

" 默认布局
set toolbars=noaddons,nobookmarks,nomenu,nonavigation,tabs

" 状态栏元素
set status=input,location,tabcount,position

" 编辑器设置, C-i 在编辑框中触发
set editor=emacsclient\ -c

" Show completions and use AwesomeBar (+search plugins)
set autocomplete
set complete=sl

" 设置默认的搜索引擎
set ds=g

"超级的下一页,快捷键是[[和]]
set nextpattern=\s*下一页|下一张|下一篇|下页|后页\s*,^\bnext\b,\\bnext\\b,^>$,^(>>|»)$,^(>|»),(>|»)$,\\bmore\\b
set previouspattern=\s*上一页|上一张|上一篇|上页|前页\s*,^\bprev|previous\b,\\bprev|previous\\b,^<$,^(<<|«)$,^(<|«),(<|«)$

"命令行菜单最多显示的条目数
set maxitems=12

"访问shanbay时禁用vimperator
autocmd LocationChange /www\.shanbay\.com\/review :js modes.passAllKeys = /www\.shanbay\.com\/review/.test(buffer.URL)


" {{{ Key bindings 键绑定设置
"     - Emacs GTK key-theme and FF already provide bindings for input fields

"在dict.cn中查找所选词的英语
command! dict -nargs=* tabopen http://dict.cn/<args>
map w :dict
map <silent> w :exe ":dict "+content.getSelection()<CR>

" M-x enters command mode
noremap <A-x> :

" Goto the top of the document with M-<
noremap <A-<> gg

" Goto the end of the document with M->
noremap <A->> G

" Use C-s and C-r for searching (n/N for next/prev as in less)
noremap <C-s> /
noremap <C-r> ?

" Copy the current URL to the clipboard with M-w
noremap <A-w> y

" Copy selected text to the clipboard with C-w 
noremap <C-w> Y

" Paste the current clipboard selection to a new buffer with C-y
noremap <C-y> P

"jk一次多翻一点
noremap j 3j
noremap k 3k

"修改JK为向上向下半页
map J <C-d>
noremap K <C-u>

"外观配置
map <C-Down> :set toolbars=none,navigation,tabs<CR>
map <C-Up> :set toolbars=none,tabs<CR>

"修改][为超级上下页
map ] ]]
map [ [[

"修改hl为切换前后标签
noremap q gT
"noremap w gt
noremap h gT
noremap l gt

" }}}
